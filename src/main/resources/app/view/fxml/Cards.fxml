<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<AnchorPane
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        fx:controller="app.view.controller.Cards"
        stylesheets="@../css/cards.css, @../css/style.css"
        styleClass="main-pane">
    <HBox alignment="CENTER" minWidth="400">
        <Button styleClass="profile, header-image"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Text text="Dating for Desktop" styleClass="title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button onAction="#goToMatches" styleClass="matches, header-image"/>
    </HBox>
    <AnchorPane fx:id="anchorPane" AnchorPane.topAnchor="75" AnchorPane.leftAnchor="25"/>
</AnchorPane>